@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create")" class="btn btn-default pull-right">Add Subscriber</a>
    <h2>Alert Subscribers</h2>
</div>
<div id="grid"></div>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $("#grid").simplePagingGrid({
                columnNames: ["", "Email", "Mobile"],
                columnKeys: [null, "Email", "Mobile"],
                columnWidths: ["0%", "60%", "40%"],
                cellTemplates: [
                    '<span class="glyphicon glyphicon-trash"></span>',
                    '<a href="#">{{Email}}</a>',
                    null
                ],
                dataUrl: '@Url.Action("Get")'
            });
        });
    </script>   
}